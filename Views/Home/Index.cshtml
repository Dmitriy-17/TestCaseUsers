@model PagedList.IPagedList<TestCaseUsers.Models.User>

@{
    ViewBag.Title = "Home Page";
}
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<md-button ng-click="addDialog($event)" class="md-raised">Добавить</md-button>

<table class="table table-striped table-responsive table-hover">
    <thead class="">
        <tr>
            <th>Логин</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Домашний адрес</th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
        <tr style="font-weight:600; font-size:16px" >
            <td>@user.Login</td>
            <td>@user.FirstName</td>
            <td>@user.LastName<span> грн</span></td>
            <td>@user.PhoneNumber</td>
            <td>@user.EmailAddress</td>
            <td>@user.HomeAddress</td>
            <td>
                <md-button ng-click="update(@user.Id, $event)" class="md-raised md-primary">Редактировать</md-button>
                <md-button ng-click="remove(@user.Id)" class="md-raised md-warn">Удалить</md-button>
            </td>
        </tr>
}
    </tbody>
</table>


<div style="text-align:center">
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
